<resources>
    <!-- Base application theme. -->
    <style name="Theme.GitHubUser" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/dark_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Splash Screen -->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_github</item>
        <item name="postSplashScreenTheme">@style/Theme.GitHubUser</item>
    </style>

    <!-- Text -->
    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Normal">
        <item name="fontFamily">@font/poppins</item>
    </style>

    <style name="Text.Medium">
        <item name="fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Text.Bold">
        <item name="fontFamily">@font/poppins_semibold</item>
    </style>

    <!-- SearchView -->
    <style name="SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">16sp</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryHint">Find user</item>
    </style>

    <!-- ProgressBar -->
    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:background">@drawable/bg_circle</item>
        <item name="android:elevation">2dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- TabLayout -->
    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabRippleColor">@android:color/transparent</item>
        <item name="tabIndicatorGravity">stretch</item>
        <item name="tabIndicator">@drawable/bg_round</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>
</resources>